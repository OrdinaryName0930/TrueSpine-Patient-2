rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isParticipant(participantIds) {
      return request.auth.uid in participantIds;
    }
    
    // Users collection - users can only access their own document
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Patients collection - patients can only access their own document
    match /patients/{patientId} {
      allow read, write: if isAuthenticated() && isOwner(patientId);
    }
    
    // Chiropractors collection - read-only for patients, full access for chiropractors
    match /chiropractors/{chiropractorId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(chiropractorId);
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Allow read/write only for conversation participants
      allow read, write: if isAuthenticated() && 
        isParticipant(resource.data.participantIds);
      
      // Allow creation if user is one of the participants
      allow create: if isAuthenticated() && 
        isParticipant(request.resource.data.participantIds);
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read for conversation participants
        allow read: if isAuthenticated() && 
          isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds);
        
        // Allow write for message sender or receiver
        allow write: if isAuthenticated() && 
          (isOwner(resource.data.senderId) || isOwner(resource.data.receiverId)) &&
          isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds);
        
        // Allow creation if user is sender and part of conversation
        allow create: if isAuthenticated() && 
          isOwner(request.resource.data.senderId) &&
          isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds);
        
        // Allow update for message status (read, delivered, etc.)
        allow update: if isAuthenticated() && 
          (isOwner(resource.data.senderId) || isOwner(resource.data.receiverId)) &&
          isParticipant(get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds);
        
        // Allow delete only for message sender
        allow delete: if isAuthenticated() && 
          isOwner(resource.data.senderId);
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

